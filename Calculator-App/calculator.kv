<Button>:
    font_size: "25dp"
    background_color: (.5, .9, .5, 1)
    on_press: app.root.char_insert(self.text)
<DarkButton@Button>:
    background_color: (.6, .8, .6, 1)
grid: 
<grid>
    cols: 1
    spacing: dp(5)
    TextInput: 
        background_color: (.6, .65, .6, 1)
        disabled_foreground_color: (.7, .95, .7, 1)
        text: root.content
        size_hint: 1, None
        height: "85dp"
        multiline: False
        font_size: "60dp"
        disabled: True
        halign: "right"
        bold: True
        padding_x: (dp(15))
    GridLayout:
        cols: 4
        Button: 
            text: "%"
        Button:
            text: "CE" 
        Button: 
            text: "C" 
        Button: 
            text: "/" 
        DarkButton: 
            text: "7" 
        DarkButton:
            text: "8" 
        DarkButton: 
            text: "9"
        Button: 
            text: "*"
        DarkButton:
            text: "4" 
        DarkButton:
            text: "5" 
        DarkButton:
            text: "6" 
        Button:
            text: "-" 
        DarkButton: 
            text: "1"
        DarkButton: 
            text: "2"
        DarkButton: 
            text: "3"
        Button: 
            text: "+"
        DarkButton: 
            text: "CLOSE"
        DarkButton: 
            text: "0"
        DarkButton: 
            text: "."
        Button: 
            text: "="

